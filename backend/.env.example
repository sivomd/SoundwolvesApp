# SoundWolves Backend Environment Configuration
# Copy this file to .env and fill in your values

# MongoDB Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/soundwolves?retryWrites=true&w=majority
DB_NAME=soundwolves

# Security Configuration
# IMPORTANT: Generate a unique secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secure-secret-key-here

# Environment
# Set to 'production' to enable HSTS and other production security features
ENVIRONMENT=development

# CORS Configuration
# Comma-separated list of allowed origins
# For development:
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# For production, use your actual domain:
# CORS_ORIGINS=https://soundwolves.com,https://www.soundwolves.com
